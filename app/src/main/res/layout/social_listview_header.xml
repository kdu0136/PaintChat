<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">


    <LinearLayout
        android:id="@+id/layout_profileText"
        android:background="#FFFAFAFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="13sp"
            android:text = "내 프로필"/>
    </LinearLayout>

    <View
        android:layout_height="0.5dip"
        android:layout_width="match_parent"
        android:background="#FFAAAAAA" />

    <LinearLayout
        android:id="@+id/layout_profile"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/selector">
        <ImageView
            android:id="@+id/imageView_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/textView_nick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <View
        android:layout_height="0.5dip"
        android:layout_width="match_parent"
        android:background="#FFAAAAAA" />

    <LinearLayout
        android:id="@+id/layout_recommendText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFAFAFA">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="추천 친구"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_height="0.5dip"
        android:layout_width="match_parent"
        android:background="#FFAAAAAA" />

    <LinearLayout
        android:id="@+id/layout_recommend"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/selector">
        <ImageView
            android:id="@+id/imageView_recommend"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/textView_recommend"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="새로운 친구를 만나보세요!"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView_recommend_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" >"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <View
        android:layout_height="0.5dip"
        android:layout_width="match_parent"
        android:background="#FFAAAAAA" />

    <LinearLayout
        android:id="@+id/layout_socialText"
        android:background="#FFFAFAFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="13sp"
            android:text = "친구"/>
    </LinearLayout>

    <View
        android:layout_height="0.5dip"
        android:layout_width="match_parent"
        android:background="#FFAAAAAA" />

</LinearLayout>